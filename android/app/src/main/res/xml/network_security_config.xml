<network-security-config>
   <base-config cleartextTrafficPermitted="true">
      <trust-anchors>
         <certificates src="@raw/my_ca"/>
      </trust-anchors>
   </base-config>
   <domain-config>
      <domain includeSubdomains="true">zeros.co.in</domain>
      <trust-anchors>
         <certificates src="@raw/my_ca"/>
      </trust-anchors>
   </domain-config>
</network-security-config>